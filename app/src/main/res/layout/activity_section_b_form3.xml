<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.form1.SectionAForm1Activity">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.kmc_screening.ui.form3.SectionBForm3Activity" />
    </data>

    <ScrollView style="@style/i_scrollview">

        <LinearLayout style="@style/linearlayout_view">

            <LinearLayout
                android:id="@+id/fldGrpSecB02"
                style="@style/linearlayout_view_wt_bound">

                <!-- kf3b02-->
                <android.support.v7.widget.CardView
                    android:id="@+id/fldGrpCVkf3b02"
                    style="@style/cardView">

                    <LinearLayout style="@style/linearlayout_view">

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/kf3b02" />

                        <RadioGroup
                            android:id="@+id/kf3b02"
                            style="@style/i_radiogroup">

                            <RadioButton
                                android:id="@+id/kf3b02a"
                                style="@style/i_radiobutton"
                                android:text="@string/kf3b02a" />

                            <RadioButton
                                android:id="@+id/kf3b02b"
                                style="@style/i_radiobutton"
                                android:text="@string/kf3b02b" />

                            <RadioButton
                                android:id="@+id/kf3b02c"
                                style="@style/i_radiobutton"
                                android:text="@string/kf3b02c" />

                        </RadioGroup>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:id="@+id/fldGrpSecB03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility='@{kf3b02a.checked? View.VISIBLE : View.GONE}'>

                    <!-- kf3b03-->
                    <android.support.v7.widget.CardView
                        android:id="@+id/fldGrpCVkf3b03"
                        style="@style/cardView">

                        <LinearLayout style="@style/linearlayout_view">

                            <TextView
                                style="@style/i_textview"
                                android:text="@string/kf3b03" />

                            <RadioGroup
                                android:id="@+id/kf3b03"
                                style="@style/i_radiogroup">

                                <RadioButton
                                    android:id="@+id/kf3b03a"
                                    style="@style/i_radiobutton"
                                    android:text="@string/kf3b03a" />

                                <RadioButton
                                    android:id="@+id/kf3b03b"
                                    style="@style/i_radiobutton"
                                    android:text="@string/kf3b03b" />

                                <RadioButton
                                    android:id="@+id/kf3b03c"
                                    style="@style/i_radiobutton"
                                    android:text="@string/kf3b03c" />
                            </RadioGroup>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:id="@+id/fldGrpSecB04"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility='@{kf3b03c.checked? View.VISIBLE : View.GONE}'>

                        <!-- kf3b04-->
                        <android.support.v7.widget.CardView
                            android:id="@+id/fldGrpCVkf3b04"
                            style="@style/cardView">

                            <LinearLayout style="@style/linearlayout_view">

                                <TextView
                                    style="@style/i_textview"
                                    android:text="@string/kf3b04" />

                                <LinearLayout
                                    android:id="@+id/fldGrpLLkf3b04"
                                    style="@style/linearlayout_view"
                                    android:tag="0">

                                    <CheckBox
                                        android:id="@+id/kf3b04a"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="1dp"
                                        android:text="@string/kf3b04a" />

                                    <CheckBox
                                        android:id="@+id/kf3b04b"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="1dp"
                                        android:text="@string/kf3b04b" />

                                    <CheckBox
                                        android:id="@+id/kf3b04c"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="1dp"
                                        android:text="@string/kf3b04c" />

                                    <CheckBox
                                        android:id="@+id/kf3b04d"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="1dp"
                                        android:text="@string/kf3b04d" />

                                    <CheckBox
                                        android:id="@+id/kf3b04e"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="1dp"
                                        android:text="@string/kf3b04e" />

                                    <CheckBox
                                        android:id="@+id/kf3b04f"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="1dp"
                                        android:text="@string/kf3b04f" />

                                    <CheckBox
                                        android:id="@+id/kf3b04g"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="1dp"
                                        android:text="@string/kf3b04g" />

                                    <CheckBox
                                        android:id="@+id/kf3b0496"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="1dp"
                                        android:text="@string/other" />

                                    <EditText
                                        android:id="@+id/kf3b0496x"
                                        style="@style/EditText"
                                        android:hint="@string/other"
                                        android:tag="kf3b0496"
                                        android:text='@{kf3b0496.checked ? kf3b0496x.getText.toString : "" }'
                                        android:visibility='@{kf3b0496.checked ? View.VISIBLE : View.GONE }' />

                                </LinearLayout>

                                <CheckBox
                                    android:id="@+id/kf3b0498"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:tag="-1"
                                    android:text="@string/dkn" />

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <!-- kf3b05-->
                        <android.support.v7.widget.CardView
                            android:id="@+id/fldGrpCVkf3b05"
                            style="@style/cardView">

                            <LinearLayout style="@style/linearlayout_view">

                                <TextView
                                    style="@style/i_textview"
                                    android:text="@string/kf3b05" />

                                <RadioGroup
                                    android:id="@+id/kf3b05"
                                    style="@style/i_radiogroup">

                                    <RadioButton
                                        android:id="@+id/kf3b05a"
                                        style="@style/i_radiobutton"
                                        android:text="@string/kf3b05a" />

                                    <RadioButton
                                        android:id="@+id/kf3b05b"
                                        style="@style/i_radiobutton"
                                        android:text="@string/kf3b05b" />

                                    <RadioButton
                                        android:id="@+id/kf3b05c"
                                        style="@style/i_radiobutton"
                                        android:text="@string/kf3b05c" />

                                    <RadioButton
                                        android:id="@+id/kf3b05d"
                                        style="@style/i_radiobutton"
                                        android:text="@string/kf3b05d" />

                                    <RadioButton
                                        android:id="@+id/kf3b0596"
                                        style="@style/i_radiobutton"
                                        android:text="@string/kf3b05e" />

                                    <EditText
                                        android:id="@+id/kf3b0596x"
                                        style="@style/EditText"
                                        android:hint="@string/other"
                                        android:tag="kf3b0596"
                                        android:text='@{kf3b0596.checked ? kf3b0596x.getText.toString : "" }'
                                        android:visibility='@{kf3b0596.checked ? View.VISIBLE : View.GONE }' />

                                </RadioGroup>

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <!-- kf3b06-->
                        <android.support.v7.widget.CardView
                            android:id="@+id/fldGrpCVkf3b06"
                            style="@style/cardView">

                            <LinearLayout style="@style/linearlayout_view">

                                <TextView
                                    style="@style/i_textview"
                                    android:text="@string/kf3b06" />

                                <com.edittextpicker.aliazaz.EditTextPicker
                                    android:id="@+id/kf3b06h"
                                    style="@style/EditText_number"
                                    android:hint="@string/hours"
                                    android:maxLength="2"
                                    app:maxValue="23"
                                    app:minValue="0"
                                    app:type="range" />

                                <com.edittextpicker.aliazaz.EditTextPicker
                                    android:id="@+id/kf3b06d"
                                    style="@style/EditText_number"
                                    android:hint="@string/days"
                                    android:maxLength="2"
                                    app:maxValue="31"
                                    app:minValue="0"
                                    app:type="range" />

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <!--  = = = = =  END OF FORM FIELDS  = = = = = -->
            <LinearLayout
                android:id="@+id/fldGrpbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="32dp">

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_green_light"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="@string/nextSection"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnEnd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_light"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="@string/endForm"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>