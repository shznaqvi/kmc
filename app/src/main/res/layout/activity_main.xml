<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.aku.hassannaqvi.kmc.edu.aku.hassannaqvi.kmc.MainActivity">

    <data>

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.kmc.ui.MainActivity" />
    </data>

    <ScrollView
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="72dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Login progress -->

            <TextView
                android:id="@+id/lblheader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:background="@color/dullWhile"
                android:text="Main Menu"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <!--  <TextView
                  android:id="@+id/testing"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:background="@color/red"
                  android:elevation="2dp"
                  android:gravity="center_horizontal"
                  android:keepScreenOn="true"
                  android:text="ONLY FOR TESTING"
                  android:textColor="@color/dullWhile"
                  android:textSize="32sp"
                  android:textStyle="bold" />-->

            <TextView
                android:id="@+id/recordSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/black"
                android:padding="20dp"
                android:text="Records Summary"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:typeface="monospace" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="?android:textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="3"
                    android:background="@android:color/transparent"
                    android:text="AREA: "
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spAreas"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="35"
                    android:gravity="center"
                    android:popupBackground="#ffffff" />

            </LinearLayout>

            <Button
                android:id="@+id/openForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:onClick="@{() -> callback.openForm()}"
                android:text="OPEN FORM" />

            <LinearLayout
                android:id="@+id/adminsec1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/openA2"
                    style="@style/buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openA2"
                    android:text="OPEN A2" />

                <Button
                    android:id="@+id/openA3"
                    style="@style/buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openA3"
                    android:text="OPEN A3" />

                <Button
                    android:id="@+id/openB1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openB1"
                    android:text="OPEN B1" />

                <Button
                    android:id="@+id/openB2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openB2"
                    android:text="OPEN B2" />
                <Button
                    android:id="@+id/openB3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openB3"
                    android:text="OPEN B3" />
                <Button
                    android:id="@+id/openB3_PNC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openB3_PNC"
                    android:text="OPEN B3 PNC" />
                <Button
                    android:id="@+id/openB4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openB4"
                    android:text="OPEN B4" />
                <Button
                    android:id="@+id/openB4_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openB4_2"
                    android:text="OPEN B4_2" />
                <Button
                    android:id="@+id/openB4_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openB4_3"
                    android:text="OPEN B4_3" />
                <Button
                    android:id="@+id/openB4_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openB4_4"
                    android:text="OPEN B4_4" />
                <Button
                    android:id="@+id/openB4_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openB4_5"
                    android:text="OPEN B4_5" />

                <Button
                    android:id="@+id/openC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openC"
                    android:text="OPEN C" />


            </LinearLayout>


            <Button
                android:id="@+id/syncServer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:onClick="syncServer"
                android:text="Upload Data" />

            <LinearLayout
                android:id="@+id/adminsec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/syncDevice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="syncDevice"
                    android:text="Download Data" />

                <Button
                    android:id="@+id/downloadApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/red"
                    android:text="DOWNLOAD APP"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/updateApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:background="#D60000"
                    android:onClick="updateApp"
                    android:text="Update App"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/openDB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="openDB"
                    android:text="Open Database Manager" />

                <Button
                    android:id="@+id/testGPS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:onClick="testGPS"
                    android:text="Test GPS Coordinates" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</layout>