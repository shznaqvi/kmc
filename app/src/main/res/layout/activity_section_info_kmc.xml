<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="rtl"
    tools:context=".ui.SectionInfoKmcActivity">

    <data>

        <import type="android.view.View" />


        <variable
            name="callback"
            type="edu.aku.hassannaqvi.kmc_screening.ui.SectionInfoKmcActivity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <TextView
                style="@style/i_textview"
                android:text="@string/crataluka" />

            <Spinner
                android:id="@+id/crataluka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp" />

            <TextView
                style="@style/i_textview"
                android:text="@string/cruc" />

            <Spinner
                android:id="@+id/crauc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp" />

            <TextView
                style="@style/i_textview"
                android:text="@string/crvillage" />

            <Spinner
                android:id="@+id/crvillage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp" />

            <LinearLayout
                android:id="@+id/checkBtnLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/kapr02a"
                    style="@style/textInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/kapr01"
                    android:inputType="number"
                    android:maxLength="6" />

                <Button
                    android:id="@+id/btnSearch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_light"
                    android:onClick='@{() -> callback.BtnSearchWoman()}'
                    android:text="CHECK"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fldGrpcra02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/mainLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/form01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/kf1a1" />

                        <EditText
                            android:id="@+id/kf1a1"
                            style="@style/textInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/kf1a1"
                            android:inputType="number"
                            android:maxLength="3" />

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/kf1a2" />

                        <EditText
                            android:id="@+id/kf1a2"
                            style="@style/textInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz"
                            android:hint="@string/kf1a2"
                            android:inputType="text" />

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/kf1a3" />

                        <EditText
                            android:id="@+id/kf1a3"
                            style="@style/textInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/kf1a3"
                            android:inputType="number"
                            android:maxLength="3" />

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/kf1a4" />

                        <EditText
                            android:id="@+id/kf1a4"
                            style="@style/textInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz"
                            android:hint="@string/kf1a4"
                            android:inputType="text" />

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/kf1a5" />

                        <EditText
                            android:id="@+id/kf1a5"
                            style="@style/textInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:digits="0123456789"
                            android:hint="@string/kf1a5"
                            android:inputType="number"
                            android:maxLength="3" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/form02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/kf2a1" />

                        <EditText
                            android:id="@+id/kf2a1"
                            style="@style/textInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz"
                            android:hint="@string/kf2a1"
                            android:inputType="text" />

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/kf2a2" />

                        <EditText
                            android:id="@+id/kf2a2"
                            style="@style/textInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz"
                            android:hint="@string/kf2a2"
                            android:inputType="text" />


                        <TextView
                            style="@style/i_textview"
                            android:text="@string/kf2a3" />

                        <EditText
                            android:id="@+id/kf2a3"
                            style="@style/textInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:digits="0123456789"
                            android:hint="@string/kf2a3"
                            android:inputType="number"
                            android:maxLength="11" />

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/kf2a4" />

                        <EditText
                            android:id="@+id/kf2a4"
                            style="@style/textInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:digits="0123456789"
                            android:hint="@string/kf2a4"
                            android:inputType="number"
                            android:maxLength="2" />

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/kf2a5" />

                        <EditText
                            android:id="@+id/kf2a5"
                            style="@style/textInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:digits="0123456789"
                            android:hint="@string/kf2a5"
                            android:inputType="number"
                            android:maxLength="2" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/form0203"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/kf2a6" />

                        <EditText
                            android:id="@+id/kf2a6"
                            style="@style/textInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz"
                            android:hint="@string/kf2a6"
                            android:inputType="text" />

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/kf2a7" />

                        <EditText
                            android:id="@+id/kf2a7"
                            style="@style/textInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:digits="0123456789"
                            android:hint="@string/kf2a7"
                            android:inputType="number"
                            android:maxLength="2" />

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/kf2a8" />


                        <EditText
                            android:id="@+id/kf2a8"
                            style="@style/textInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz"
                            android:hint="@string/kf2a8"
                            android:inputType="text" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/form03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/kf3a3" />


                        <EditText
                            android:id="@+id/kf3a3"
                            style="@style/textInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz"
                            android:hint="@string/kf3a3"
                            android:inputType="text" />

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/kf3a4" />

                        <EditText
                            android:id="@+id/kf3a4"
                            style="@style/textInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:digits="0123456789"
                            android:hint="@string/kf3a4"
                            android:inputType="number"
                            android:maxLength="2" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fldGrpbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="32dp">

                    <Button
                        android:id="@+id/btnNext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@android:color/holo_green_light"
                        android:onClick="@{() -> callback.BtnContinue()}"
                        android:text="@string/nextSection"
                        android:textColor="@color/white"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/btnEnd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@android:color/holo_red_light"
                        android:onClick="@{() -> callback.BtnEnd()}"
                        android:text="@string/endForm"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>