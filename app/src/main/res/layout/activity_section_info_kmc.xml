<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="rtl"
    tools:context=".ui.SectionInfoKmcActivity">

    <data>

        <import type="android.view.View" />


        <variable
            name="callback"
            type="edu.aku.hassannaqvi.kmc_screening.ui.SectionInfoKmcActivity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/infoMainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <!--crataluka-->
            <android.support.v7.widget.CardView style="@style/cardView">

                <LinearLayout style="@style/linearlayout_view">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/crataluka1" />

                    <Spinner
                        android:id="@+id/crataluka"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--crauc-->
            <android.support.v7.widget.CardView style="@style/cardView">

                <LinearLayout style="@style/linearlayout_view">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/cruc" />

                    <Spinner
                        android:id="@+id/crauc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--crvillage-->
            <android.support.v7.widget.CardView style="@style/cardView">

                <LinearLayout style="@style/linearlayout_view">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/crvillage" />

                    <Spinner
                        android:id="@+id/crvillage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/checkBtnLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/kapr02a"
                    style="@style/textInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/kapr01"
                    android:inputType="number"
                    android:maxLength="3" />

                <Button
                    android:id="@+id/btnSearch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_light"
                    android:onClick='@{() -> callback.BtnSearchWoman()}'
                    android:text="CHECK"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fldGrpcra02"
                style="@style/linearlayout_view_wt_bound"
                android:visibility="gone"
                tools:visibility="visible">

                <!--kfa1-->
                <android.support.v7.widget.CardView style="@style/cardView">

                    <LinearLayout style="@style/linearlayout_view">

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/kfa1" />

                        <RadioGroup
                            android:id="@+id/kfa1"
                            style="@style/i_radiogroup">

                            <RadioButton
                                android:id="@+id/kfa1a"
                                style="@style/i_radiobutton"
                                android:text="@string/kfa1a" />

                            <RadioButton
                                android:id="@+id/kfa1b"
                                style="@style/i_radiobutton"
                                android:text="@string/kfa1b" />

                        </RadioGroup>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <!--F-1-->
                <LinearLayout
                    android:id="@+id/form01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <!--kf1a2-->
                    <android.support.v7.widget.CardView style="@style/cardView">

                        <LinearLayout style="@style/linearlayout_view">

                            <TextView
                                style="@style/i_textview"
                                android:text="@string/kf1a2" />

                            <Spinner
                                android:id="@+id/kf1a2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/kf1a3" />

                    <EditText
                        android:id="@+id/kf1a3"
                        style="@style/textInput"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:hint="@string/kf1a3"
                        android:inputType="text" />

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/kf1a4" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/kf1a4"
                        style="@style/EditText_number"
                        android:hint="@string/kf1a4"
                        android:maxLength="4"
                        app:maxValue="9999"
                        app:minValue="1"
                        app:type="range" />

                </LinearLayout>

                <!--F-2-3-->
                <LinearLayout
                    android:id="@+id/form0203"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/kf2a6" />

                    <Spinner
                        android:id="@+id/kf2a6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp" />

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/kf2a7" />

                    <EditText
                        android:id="@+id/kf2a7"
                        style="@style/textInput"
                        android:enabled="false"
                        android:hint="@string/kf2a7" />

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/kf2a8" />

                    <EditText
                        android:id="@+id/kf2a8"
                        style="@style/textInput"
                        android:enabled="false"
                        android:hint="@string/kf2a8" />

                </LinearLayout>

                <!--F-2-->
                <LinearLayout
                    android:id="@+id/form02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/kf2a1" />

                    <EditText
                        android:id="@+id/kf2a1"
                        style="@style/textInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz"
                        android:hint="@string/kf2a1"
                        android:inputType="text" />


                    <TextView
                        style="@style/i_textview"
                        android:text="@string/kf2a2" />

                    <EditText
                        android:id="@+id/kf2a2"
                        style="@style/textInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz"
                        android:hint="@string/kf2a2"
                        android:inputType="text" />


                    <TextView
                        style="@style/i_textview"
                        android:text="@string/kf2a3" />

                    <EditText
                        android:id="@+id/kf2a3"
                        style="@style/EditText_number"
                        android:hint="@string/kf2a3"
                        android:maxLength="11" />


                    <TextView
                        style="@style/i_textview"
                        android:text="@string/kf2a4" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/kf2a4"
                        style="@style/EditText_number"
                        android:hint="@string/kf2a4"
                        android:maxLength="2"
                        app:maxValue="50"
                        app:minValue="2"
                        app:type="range" />

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/kf2a5" />

                    <EditText
                        android:id="@+id/kf2a5"
                        style="@style/EditText_number"
                        android:hint="@string/kf2a5"
                        android:maxLength="2" />

                </LinearLayout>

                <!--F-3-->
                <LinearLayout
                    android:id="@+id/form03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/kf3a3" />

                    <EditText
                        android:id="@+id/kf3a3"
                        style="@style/textInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz"
                        android:hint="@string/kf3a3"
                        android:inputType="text" />

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/kf3a4" />

                    <EditText
                        android:id="@+id/kf3a4"
                        style="@style/textInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:digits="0123456789"
                        android:hint="@string/kf3a4"
                        android:inputType="number"
                        android:maxLength="2" />

                </LinearLayout>

                <!--Buttons-->
                <LinearLayout
                    android:id="@+id/fldGrpbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="32dp">

                    <Button
                        android:id="@+id/btnNext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@android:color/holo_green_light"
                        android:onClick="@{() -> callback.BtnContinue()}"
                        android:text="@string/nextSection"
                        android:textColor="@color/white"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/btnEnd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@android:color/holo_red_light"
                        android:onClick="@{() -> callback.BtnEnd()}"
                        android:text="@string/endForm"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>