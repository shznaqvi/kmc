<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layoutDirection="rtl"
    tools:context="edu.aku.hassannaqvi.kmc.ui.SectionD2Activity">

<data>

    <import type="android.view.View" />

    <variable
        name="callback"
        type="edu.aku.hassannaqvi.kmc.ui.SectionD2Activity" />
</data>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="@string/kd2heading"
            android:textSize="40sp" />

        <!--kd201-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:text="@string/kd201"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

        <RadioGroup
            android:id="@+id/kd201"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/kd201a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/days" />
            <EditText
                android:id="@+id/kd201d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="123456789"
                android:hint="@string/days"
                android:text='@{kd201a.checked ? kd201d.getText.toString : ""}'
                android:visibility='@{kd201a.checked ? View.VISIBLE : View.GONE}'
                android:inputType="number" />

            <RadioButton
                android:id="@+id/kd201b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/months" />

            <EditText
                android:id="@+id/kd201m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="123456789"
                android:hint="@string/months"
                android:text='@{kd201b.checked ? kd201m.getText.toString : ""}'
                android:visibility='@{kd201b.checked ? View.VISIBLE : View.GONE}'
                android:inputType="number" />

            <RadioButton
                android:id="@+id/kd20199"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="@string/kd20199" />
            <RadioButton
                android:id="@+id/kd20177"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="@string/kd20177" />
            <RadioButton
                android:id="@+id/kd20198"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="@string/dkn" />

        </RadioGroup>


        <!--kd202-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:text="@string/kd202"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

        <RadioGroup
            android:id="@+id/kd202"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/kd202a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/kd202a" />

            <RadioButton
                android:id="@+id/kd202b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/kd202b" />

            <RadioButton
                android:id="@+id/kd202c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="@string/kd202c" />
            <RadioButton
                android:id="@+id/kd202d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="@string/kd202" />
            <RadioButton
                android:id="@+id/kd202e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="@string/kd202e" />
            <RadioButton
                android:id="@+id/kd20296"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="@string/other" />

        </RadioGroup>
        <EditText
            android:id="@+id/kd20296x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="@string/other"
            android:text='@{kd20296.checked ? kd20296x.getText.toString : ""}'
            android:visibility='@{kd20296.checked ? View.VISIBLE : View.GONE}'
            android:inputType="textCapWords" />

        <!--kd203-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:text="@string/kd203"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />
        <RadioGroup
            android:id="@+id/kd203"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/kd203a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:text="@string/yes" />

            <RadioButton
                android:id="@+id/kd203b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:text="@string/no" />

        </RadioGroup>
        <!--skip pattern kd204-->
        <LinearLayout
            android:id="@+id/fldGrpkd204"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--kd204-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/colorPrimary"
                android:text="@string/kd204"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" />

            <RadioGroup
                android:id="@+id/kd204"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/kd204a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kd204a" />

                <RadioButton
                    android:id="@+id/kd204b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kd204b" />

                <RadioButton
                    android:id="@+id/kd204c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="@string/kd204c" />
                <RadioButton
                    android:id="@+id/kd204d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="@string/kd202" />
                <RadioButton
                    android:id="@+id/kd204e"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="@string/kd204e" />
                <RadioButton
                    android:id="@+id/kd204f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="@string/kd204f" />
                <RadioButton
                    android:id="@+id/kd204g"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="@string/kd204g" />
                <RadioButton
                    android:id="@+id/kd20496"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="@string/other" />

            </RadioGroup>
            <EditText
                android:id="@+id/kd20496x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="@string/other"
                android:text='@{kd20496.checked ? kd20496x.getText.toString : ""}'
                android:visibility='@{kd20496.checked ? View.VISIBLE : View.GONE}'
                android:inputType="textCapWords" />

        </LinearLayout>


        <!--  = = = = =  END OF FORM FIELDS  = = = = = -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_End"
                style="@style/buttons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/red"
                android:onClick="@{() -> callback.BtnEnd()}"
                android:text="@string/end_interview"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_Continue"
                style="@style/buttons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#1ed61e"
                android:onClick="@{() -> callback.BtnContinue()}"
                android:text="@string/nextSection"
                android:textColor="@color/white"
                />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
</layout>
