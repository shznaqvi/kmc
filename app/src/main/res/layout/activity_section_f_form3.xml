<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.form1.SectionAForm1Activity">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.kmc_screening.ui.form3.SectionFForm3Activity" />
    </data>

    <ScrollView style="@style/i_scrollview">

        <LinearLayout style="@style/vlinearlayout">

            <LinearLayout
                android:id="@+id/fldGrpSecF02"
                style="@style/vlinearlayout">

                <!-- kf3f01-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVkf3f01"
                    style="@style/cardViews">

                    <LinearLayout style="@style/vlinearlayout">

                        <TextView
                            style="@style/textviews"
                            android:text="@string/kf3f01" />

                        <LinearLayout
                            style="@style/vlinearlayout"
                            android:tag="0">

                            <CheckBox
                                android:id="@+id/kf3f01a"
                                style="@style/checkbox"
                                android:text="@string/kf3f01a" />

                            <CheckBox
                                android:id="@+id/kf3f01b"
                                style="@style/checkbox"
                                android:text="@string/kf3f01b" />

                            <CheckBox
                                android:id="@+id/kf3f01c"
                                style="@style/checkbox"
                                android:text="@string/kf3f01c" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- kf3f02-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVkf3f02"
                    style="@style/cardViews">

                    <LinearLayout style="@style/vlinearlayout">

                        <TextView
                            style="@style/textviews"
                            android:text="@string/kf3f02" />

                        <LinearLayout
                            style="@style/vlinearlayout"
                            android:tag="0">

                            <CheckBox
                                android:id="@+id/kf3f02a"
                                style="@style/checkbox"
                                android:text="@string/kf3f02a" />

                            <CheckBox
                                android:id="@+id/kf3f02b"
                                style="@style/checkbox"
                                android:text="@string/kf3f02b" />

                            <CheckBox
                                android:id="@+id/kf3f02c"
                                style="@style/checkbox"
                                android:text="@string/kf3f02c" />

                            <CheckBox
                                android:id="@+id/kf3f02d"
                                style="@style/checkbox"
                                android:text="@string/kf3f02d" />

                            <CheckBox
                                android:id="@+id/kf3f02e"
                                style="@style/checkbox"
                                android:text="@string/kf3f02e" />

                            <CheckBox
                                android:id="@+id/kf3f0296"
                                style="@style/checkbox"
                                android:text="@string/other" />

                            <EditText
                                android:id="@+id/kf3f0296x"
                                style="@style/EditTextAlpha"
                                android:hint="@string/specify"
                                android:tag="kf3f0296"
                                android:text='@{kf3f0296.checked ? kf3f0296x.getText().toString : "" }'
                                android:visibility='@{kf3f0296.checked ? View.VISIBLE : View.GONE }' />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- kf3f03-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVkf3f03"
                    style="@style/cardViews">

                    <LinearLayout style="@style/vlinearlayout">

                        <TextView
                            style="@style/textviews"
                            android:text="@string/kf3f03" />

                        <RadioGroup
                            android:id="@+id/kf3f03"
                            style="@style/radiogroups"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/kf3f03a"
                                style="@style/radiobuttons"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/yes" />

                            <RadioButton
                                android:id="@+id/kf3f03b"
                                style="@style/radiobuttons"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/no" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- kf3f04-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVkf3f04"
                    style="@style/cardViews"
                    android:visibility='@{kf3f03b.checked? View.GONE : View.VISIBLE}'>

                    <LinearLayout style="@style/vlinearlayout">

                        <TextView
                            style="@style/textviews"
                            android:text="@string/kf3f04" />

                        <LinearLayout
                            android:id="@+id/fldGrpLLkf3f04"
                            style="@style/vlinearlayout"
                            android:tag="0">

                            <CheckBox
                                android:id="@+id/kf3f04a"
                                style="@style/checkbox"
                                android:text="@string/kf3f04a" />

                            <CheckBox
                                android:id="@+id/kf3f04b"
                                style="@style/checkbox"
                                android:text="@string/kf3f04b" />

                            <CheckBox
                                android:id="@+id/kf3f04c"
                                style="@style/checkbox"
                                android:text="@string/kf3f04c" />

                            <CheckBox
                                android:id="@+id/kf3f04d"
                                style="@style/checkbox"
                                android:text="@string/kf3f04d" />

                            <CheckBox
                                android:id="@+id/kf3f0496"
                                style="@style/checkbox"
                                android:text="@string/other" />

                            <EditText
                                android:id="@+id/kf3f0496x"
                                style="@style/EditTextAlpha"
                                android:hint="@string/specify"
                                android:tag="kf3f0496"
                                android:text='@{kf3f0496.checked ? kf3f0496x.getText().toString : "" }'
                                android:visibility='@{kf3f0496.checked ? View.VISIBLE : View.GONE }' />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- kf3f05-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVkf3f05"
                    style="@style/cardViews">

                    <LinearLayout style="@style/vlinearlayout">

                        <TextView
                            style="@style/textviews"
                            android:text="@string/kf3f05" />

                        <LinearLayout
                            style="@style/vlinearlayout"
                            android:tag="0">

                            <CheckBox
                                android:id="@+id/kf3f05a"
                                style="@style/checkbox"
                                android:text="@string/kf3f05a" />

                            <CheckBox
                                android:id="@+id/kf3f05b"
                                style="@style/checkbox"
                                android:text="@string/kf3f05b" />

                            <CheckBox
                                android:id="@+id/kf3f05c"
                                style="@style/checkbox"
                                android:text="@string/kf3f05c" />

                            <CheckBox
                                android:id="@+id/kf3f0597"
                                style="@style/checkbox"
                                android:text="@string/noone" />

                            <CheckBox
                                android:id="@+id/kf3f0596"
                                style="@style/checkbox"
                                android:text="@string/other" />

                            <EditText
                                android:id="@+id/kf3f0596x"
                                style="@style/EditTextAlpha"
                                android:hint="@string/specify"
                                android:tag="kf3f0596"
                                android:text='@{kf3f0596.checked ? kf3f0596x.getText().toString : "" }'
                                android:visibility='@{kf3f0596.checked ? View.VISIBLE : View.GONE }' />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- kf3f06-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVkf3f06"
                    style="@style/cardViews">

                    <LinearLayout style="@style/vlinearlayout">

                        <TextView
                            style="@style/textviews"
                            android:text="@string/kf3f06" />

                        <RadioGroup
                            android:id="@+id/kf3f06"
                            style="@style/radiogroups"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/kf3f06a"
                                style="@style/radiobuttons"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/yes" />

                            <RadioButton
                                android:id="@+id/kf3f06b"
                                style="@style/radiobuttons"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/no" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <!--  = = = = =  END OF FORM FIELDS  = = = = = -->
            <LinearLayout
                android:id="@+id/fldGrpbtn"
                style="@style/hlinearlayout"
                android:layout_margin="5dp">

                <Button
                    android:id="@+id/btnNext"
                    style="@style/buttons"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_green_light"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="@string/nextSection" />

                <Button
                    android:id="@+id/btnEnd"
                    style="@style/buttons"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_light"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="@string/endForm" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>