                    <LinearLayout style="@style/linearlayout_view">

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/kf3f05" />

                        <RadioGroup
                            android:id="@+id/kf3f05"
                            style="@style/i_radiogroup">

                            <RadioButton
                                android:id="@+id/kf3f05a"
                                style="@style/i_radiobutton"
                                android:text="@string/kf3f05a" />

                            <RadioButton
                                android:id="@+id/kf3f05b"
                                style="@style/i_radiobutton"
                                android:text="@string/kf3f05b" />

                            <RadioButton
                                android:id="@+id/kf3f05c"
                                style="@style/i_radiobutton"
                                android:text="@string/kf3f05c" />

                            <EditText
                                android:id="@+id/kf3f05x"
                                style="@style/textInput"
                                android:hint="@string/kf3f05"
                                android:maxLength="4" />
                        </RadioGroup>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <!-- kf3f06-->
                <android.support.v7.widget.CardView
                    android:id="@+id/fldGrpCVkf3f06"
                    style="@style/cardView">

                    <LinearLayout style="@style/linearlayout_view">

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/kf3f06" />

                        <RadioGroup
                            android:id="@+id/kf3f06"
                            style="@style/i_radiogroup">

                            <RadioButton
                                android:id="@+id/kf3f06a"
                                style="@style/i_radiobutton"
                                android:text="@string/yes" />

                            <RadioButton
                                android:id="@+id/kf3f06b"
                                style="@style/i_radiobutton"
                                android:text="@string/no" />
                        </RadioGroup>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout
                style="@style/linearlayout_view"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/btn_Continue"
                    style="@style/buttons2"
                    android:background="@color/colorPrimary"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="@string/nextSection"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_End"
                    style="@style/buttons2"
                    android:layout_marginRight="10dp"
                    android:background="@color/colorAccent"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="@string/end_interview"
                    android:textColor="@color/white" />

                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>