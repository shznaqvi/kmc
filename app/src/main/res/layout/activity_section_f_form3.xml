<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.SectionForm1Activity">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.kmc_screening.ui.SectionFForm3Activity" />
    </data>

    <ScrollView style="@style/i_scrollview">

        <LinearLayout style="@style/linearlayout_view">

            <LinearLayout
                android:id="@+id/fldGrpSecB02"
                style="@style/linearlayout_view_wt_bound">


                <!-- kf3f01-->
                <android.support.v7.widget.CardView
                    android:id="@+id/fldGrpCVkf3f01"
                    style="@style/cardView">

                    <LinearLayout style="@style/linearlayout_view">

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/kf3f01" />

                        <RadioGroup
                            android:id="@+id/kf3f01"
                            style="@style/i_radiogroup">

                            <RadioButton
                                android:id="@+id/kf3f01a"
                                style="@style/i_radiobutton"
                                android:text="@string/kf3f01a" />

                            <RadioButton
                                android:id="@+id/kf3f01b"
                                style="@style/i_radiobutton"
                                android:text="@string/kf3f01b" />

                            <RadioButton
                                android:id="@+id/kf3f01c"
                                style="@style/i_radiobutton"
                                android:text="@string/kf3f01c" />
                        </RadioGroup>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <!-- kf3f02-->
                <android.support.v7.widget.CardView
                    android:id="@+id/fldGrpCVkf3f02"
                    style="@style/cardView">

                    <LinearLayout style="@style/linearlayout_view">

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/kf3f02" />

                        <RadioGroup
                            android:id="@+id/kf3f02"
                            style="@style/i_radiogroup">

                            <RadioButton
                                android:id="@+id/kf3f02a"
                                style="@style/i_radiobutton"
                                android:text="@string/kf3f02a" />

                            <RadioButton
                                android:id="@+id/kf3f02b"
                                style="@style/i_radiobutton"
                                android:text="@string/kf3f02b" />

                            <RadioButton
                                android:id="@+id/kf3f02c"
                                style="@style/i_radiobutton"
                                android:text="@string/kf3f02c" />

                            <RadioButton
                                android:id="@+id/kf3f02d"
                                style="@style/i_radiobutton"
                                android:text="@string/kf3f02d" />

                            <RadioButton
                                android:id="@+id/kf3f02e"
                                style="@style/i_radiobutton"
                                android:text="@string/kf3f02e" />

                            <EditText
                                android:id="@+id/kf3f02x"
                                style="@style/textInput"
                                android:hint="@string/kf3f02"
                                android:maxLength="4" />
                        </RadioGroup>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <!-- kf3f03-->
                <android.support.v7.widget.CardView
                    android:id="@+id/fldGrpCVkf3f03"
